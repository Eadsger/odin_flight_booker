<div id="<%= dom_id flight %>">
  <p>
    <strong>Name:</strong>
    <%= flight.name %>
  </p>

  <p>
    <strong>Depart time:</strong>
    <%= flight.depart_time %>
  </p>

  <p>
    <strong>Flight duration:</strong>
    <%= flight.flight_duration %>
  </p>

  <p>
    <strong>Origin airport:</strong>
    <%= flight.origin_airport_id %>
  </p>

  <p>
    <strong>Destination airport:</strong>
    <%= flight.destination_airport_id %>
  </p>

  <p>
    <strong>Depart date:</strong>
    <%= flight.depart_date %>
  </p>

</div>
